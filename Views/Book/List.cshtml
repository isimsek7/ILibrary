@using BookInfoApp.ViewModels;
@model IEnumerable<BookViewModel>
<div class="container">
    <div class="row justify-content-center">
        @* Include the Create button partial *@
        @Html.Partial("_CreateButtonPartial")

        <div class="container">
            <div class="row justify-content-center">
                @foreach (var book in Model)
                {
                    <div class="card m-2" style="width: 18rem;">
                        <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <h5 class="card-title">Author: @book.AuthorName</h5>
                            <h5 class="card-title">@book.CopiesAvailable Copies Left</h5>
                            <h5 class="card-title">ISBN: @book.ISBN</h5>
                            <h5 class="card-title">Publish Date: @book.PublishDate.ToShortDateString()</h5>
                            <h5 class="card-title">Genre: @book.Genre</h5>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-info">Details</a>
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                            @*<a asp-controller="Book" asp-action="Create" asp-route-id="@book.Id" class="btn btn-success">Create</a>*@
                            <form asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
