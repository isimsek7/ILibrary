<div class="container">
    <div class="row justify-content-center">
        @Html.Partial("_ButtonForAuthor")
        <div class="row">
            @foreach (var author in Model)
            {
                <div class="col-md-4">
                    <!-- Adjust this as needed -->
                    <div class="card m-2" style="width: 100%;">
                        <div class="card-body">
                            <h5 class="card-title">@author.FullName</h5>
                            <p class="card-text">Date of Birth: @author.DateOfBirth.ToShortDateString()</p>
                            <p class="card-text">Books:</p>
                            <ul>
                                @foreach (var bookTitle in author.BookTitles)
                                {
                                    <li>@bookTitle</li>
                                }
                            </ul>
                            <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#authorDetailsModal-@author.Id">
                                Details
                            </button>
                            <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id" class="btn btn-warning">Edit</a>
                            <form asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this author?');">Delete</button>
                            </form>
                        </div>
                    </div>
                    <div class="modal fade" id="authorDetailsModal-@author.Id" tabindex="-1" aria-labelledby="authorDetailsModalLabel-@author.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="authorDetailsModalLabel-@author.Id">Author Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <h5>@author.FullName</h5>
                                    <p>Date of Birth: @author.DateOfBirth.ToShortDateString()</p>
                                    <p>Books:</p>
                                    <ul>
                                        @foreach (var bookTitle in author.BookTitles)
                                        {
                                            <li>@bookTitle</li>
                                        }
                                    </ul>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
